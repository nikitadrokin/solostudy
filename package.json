{
  "name": "solostudy",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "22"
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
